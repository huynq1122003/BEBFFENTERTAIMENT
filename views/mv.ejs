<script>
  function confirmDeleteMV(btn){
    const id = btn.getAttribute("data-id");
    Swal.fire({
      title: "X√≥a MV n√†y?",
      text: "B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a MV n√†y?",
      icon: "warning",
      showCancelButton: true,
      confirmButtonText: "C√≥, x√≥a",
      cancelButtonText: "H·ªßy",
      confirmButtonColor: "#e74c3c",
      cancelButtonColor: "#6c757d"
    }).then((result) => {
      if(result.isConfirmed){
        window.location.href = "/mv/delete/" + id;
      }
    });
  }
</script>

  <script>
    // search filter
    const searchBox = document.getElementById("searchBox");
    const rows = document.querySelectorAll("#mvTable tbody tr");

    searchBox.addEventListener("keyup", () => {
      const searchText = searchBox.value.toLowerCase();
      rows.forEach(row => {
        const text = row.innerText.toLowerCase();
        row.style.display = text.includes(searchText) ? "" : "none";
      });
    });

    // open update modal
    function openUpdateMV(btn){
      const mv = JSON.parse(btn.getAttribute("data-mv"));
      document.getElementById("updateName").value = mv.Name || "";
      document.getElementById("updateSinger").value = mv.Singer || "";
      document.getElementById("updateDate").value = mv.Date || "";
      document.getElementById("updateYT").value = mv.YT || "";
      document.getElementById("updateMVForm").action = "/mv/update/" + mv.id;

      var modal = new bootstrap.Modal(document.getElementById('updateMVModal'));
      modal.show();
    }
  </script>
