      }
    });
  }
</script>

  <script>
    // Search filter
    const searchBox = document.getElementById("searchBox");
    const rows = document.querySelectorAll("#notiTable tbody tr");
    searchBox.addEventListener("keyup", () => {
      const text = searchBox.value.toLowerCase();
      rows.forEach(row => {
