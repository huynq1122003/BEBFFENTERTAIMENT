<script>
/* escape HTML ƒë·ªÉ tr√°nh XSS khi inject value v√†o innerHTML */
function escapeHtml(str){
  if(!str) return "";
  return String(str)
    .replaceAll("&","&amp;")
    .replaceAll("<","&lt;")
    .replaceAll(">","&gt;")
    .replaceAll('"',"&quot;")
    .replaceAll("'", "&#39;");
}

/* T·∫°o 1 d√≤ng MV cho update modal
   - index: s·ªë th·ª© t·ª± h√†ng (0..n-1) => d√πng ƒë·ªÉ ƒë·∫∑t t√™n input file: listMVImage-<index>
   - name/link/existingImage: gi√° tr·ªã m·∫∑c ƒë·ªãnh
*/
function createUpdateMVRow(index, name, link, existingImage){
  const wrap = document.createElement('div');
  wrap.className = 'mv-item border rounded p-2 mb-2 d-flex gap-2 align-items-start';
  wrap.dataset.mvIndex = index;

  wrap.innerHTML = `
    <div style="flex:1">
      <input type="text" name="listMVName[]" class="form-control mb-2" placeholder="NameMV" value="${escapeHtml(name)}">
      <input type="url" name="listMVLink[]" class="form-control mb-2" placeholder="Link YT" value="${escapeHtml(link)}">
      <!-- hidden to keep existing image URL (or empty) for this row -->
      <input type="hidden" name="existingMVImage[]" value="${escapeHtml(existingImage || '')}">
    </div>
    <div style="width:220px">
      ${ existingImage ? `<div style="margin-bottom:8px"><img src="${escapeHtml(existingImage)}" style="width:100%;height:110px;object-fit:cover;border-radius:6px"></div>` : '' }
      <input type="file" accept="image/*" class="form-control mb-2 mv-file-input" name="listMVImage-${index}">
      <button type="button" class="btn btn-sm btn-danger w-100 btn-remove-mv">X√≥a</button>
    </div>
  `;
  return wrap;
}

/* Reindex t·∫•t c·∫£ MV rows (g·ªçi sau add/remove) ƒë·ªÉ file-input name = listMVImage-<index> ƒë·ªìng b·ªô */
function reindexUpdateMVRows(){
  const container = document.getElementById('updateListMVContainer');
  const rows = Array.from(container.querySelectorAll('.mv-item'));
  rows.forEach((row, idx) => {
    row.dataset.mvIndex = idx;
    const fileInput = row.querySelector('.mv-file-input');
    if(fileInput) fileInput.name = `listMVImage-${idx}`;
  });
}

/* ƒê·∫∑t event delegation cho remove */
document.addEventListener('click', function(e){
  if(e.target && e.target.classList && e.target.classList.contains('btn-remove-mv')){
    const row = e.target.closest('.mv-item');
    if(row){
      row.remove();
      reindexUpdateMVRows();
    }
  }
});

/* Add new MV row trong modal Update */
document.addEventListener('click', function(e){
  if(e.target && e.target.id === 'updateBtnAddMV'){
    const container = document.getElementById('updateListMVContainer');
    const nextIndex = container.querySelectorAll('.mv-item').length;
    container.appendChild(createUpdateMVRow(nextIndex, '', '', ''));
    reindexUpdateMVRows();
  }
});

/* H√†m m·ªü modal Update, g·ªçi t·ª´ button: openUpdateModal(this) */
function openUpdateModal(btn){
  const artist = JSON.parse(btn.getAttribute('data-artist'));

  document.getElementById("updateId").value = artist.id || "";
  document.getElementById("updateName").value = artist.Name || "";
  document.getElementById("updateAka").value = artist.aka || "";
  document.getElementById("updateBirthDay").value = artist.BirthDay || "";
  document.getElementById("updatePosition").value = artist.position || "";
  document.getElementById("updateAddress").value = artist.Address || "";
  document.getElementById("updateBiography").value = artist.biography || "";
  document.getElementById("updateRelease").value = artist.ReleaseInformation || "";
  document.getElementById("updateStyle").value = artist.StyleAndOrientation || "";
  document.getElementById("updateTypical").value = (artist.Typicalhits || []).join("\n");

  // Build listMV rows
  const container = document.getElementById('updateListMVContainer');
  container.innerHTML = '';

  const listMV = artist.listMV || [];
  if(listMV.length === 0){
    container.appendChild(createUpdateMVRow(0, '', '', ''));
  } else {
    listMV.forEach((m, i) => {
      // m.NameMV, m.linkYT, m.image
      container.appendChild(createUpdateMVRow(i, m.NameMV || '', m.linkYT || '', m.image || ''));
    });
  }
  reindexUpdateMVRows();

  // set action
  document.getElementById("updateArtistForm").action = "/dashboard/update/" + (artist.id || '');
  // show modal
  var modal = new bootstrap.Modal(document.getElementById('updateArtistModal'));
  modal.show();
}
</script>


