<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Cài đặt tài khoản</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include("inc/header", { user: user }) %>

  <main class="p-4" style="margin-left:240px">
    <h2>Cài đặt tài khoản</h2>

    <!-- Thông tin tài khoản -->
    <div class="card mb-4">
      <div class="card-header">Thông tin tài khoản</div>
      <div class="card-body text-center">
        <form action="/settings/update-avatar" method="POST" enctype="multipart/form-data">
         <div class="mb-3 position-relative d-inline-block">
  <!-- Avatar -->
  <img src="<%= user.img || '/images/default.png' %>" 
       alt="avatar" 
       class="rounded-circle mb-3 border border-3 border-primary" 
       style="width:120px;height:120px;object-fit:cover;cursor:pointer"
       onclick="document.getElementById('avatarInput').click()">

  <!-- Nút Sửa -->
  <span class="position-absolute top-100 start-50 translate-middle badge rounded-pill bg-primary"
        style="cursor:pointer; font-size:0.8rem; padding:5px 10px;"
        onclick="document.getElementById('avatarInput').click()">
    Sửa
  </span>

  <input type="file" id="avatarInput" name="avatar" accept="image/*" class="d-none" onchange="this.form.submit()">
</div>

        </form>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Tên:</strong> <%= user.name %></p>
        <p><strong>Quyền:</strong> <%= user.authority %></p>
      </div>
    </div>

    <!-- Đổi mật khẩu -->
    <div class="card mb-4">
      <div class="card-header">Đổi mật khẩu</div>
      <div class="card-body">
        <!-- Bước 1: nhập mật khẩu cũ -->
        <form id="checkOldPassForm">
          <div class="mb-3">
            <label class="form-label">Mật khẩu cũ</label>
            <input type="password" id="oldPassword" name="oldPassword" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-secondary">Xác nhận</button>
        </form>

        <!-- Bước 2: hiện form đổi mật khẩu mới nếu đúng -->
        <form id="newPassForm" action="/settings/change-password" method="POST" style="display:none;">
          <input type="hidden" name="oldPassword" id="hiddenOldPass">
          <div class="mb-3 mt-3">
            <label class="form-label">Mật khẩu mới</label>
            <input type="password" name="newPassword" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Xác nhận mật khẩu mới</label>
            <input type="password" name="confirmPassword" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
        </form>
      </div>
    </div>

    <!-- Xóa tài khoản -->
    <div class="card mb-4">
      <div class="card-header">Xóa tài khoản</div>
      <div class="card-body">
        <form action="/settings/delete" method="POST" onsubmit="return confirm('Bạn có chắc chắn muốn xóa tài khoản? Hành động này không thể hoàn tác!')">
          <button type="submit" class="btn btn-danger">Xóa tài khoản</button>
        </form>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Check mật khẩu cũ qua AJAX
    document.getElementById("checkOldPassForm").addEventListener("submit", async function(e){
      e.preventDefault();
      const oldPass = document.getElementById("oldPassword").value;

      const res = await fetch("/settings/check-password", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ oldPassword: oldPass })
      });
      const data = await res.json();

      if(data.success){
        alert("✅ Mật khẩu cũ đúng, hãy nhập mật khẩu mới!");
        document.getElementById("newPassForm").style.display = "block";
        document.getElementById("hiddenOldPass").value = oldPass;
        document.getElementById("checkOldPassForm").style.display = "none";
      } else {
        alert("❌ Mật khẩu cũ không đúng!");
      }
    });
  </script>
</body>
</html>
