  text-align: center;
  margin-bottom: 25px;
}

.user-section .avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 8px;
}

.username {
  display: block;
  font-size: 16px;
  font-weight: 500;
}

.menu {
  list-style: none;
  padding: 0;
  margin: 0;
  flex-grow: 1;
}

.menu li {
  margin: 12px 0;
}

.menu a {
  color: #ecf0f1;
  text-decoration: none;
  font-size: 15px;
  display: block;
  padding: 8px 12px;
  border-radius: 6px;
}

.menu a:hover {
  background: #34495e;
}

.logout {
  margin-top: auto;
  text-align: center;
}

.logout a {
  display: block;
  color: #e74c3c;
  text-decoration: none;
  font-weight: bold;
  padding: 10px;
}

.logout a:hover {
  background: #c0392b;
  border-radius: 6px;
}
</style>
