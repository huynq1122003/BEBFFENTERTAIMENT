<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Thống kê dữ liệu</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <%- include("inc/header", { user: user }) %>

  <main class="p-4" style="margin-left:240px">
    <h2>Thống kê số lượng document</h2>

    <!-- Bộ lọc -->
    <form method="get" class="row g-3 mb-4">
      <div class="col-md-3">
        <label class="form-label">Từ ngày</label>
        <input type="date" name="from" value="<%= from || '' %>" class="form-control">
      </div>
      <div class="col-md-3">
        <label class="form-label">Đến ngày</label>
        <input type="date" name="to" value="<%= to || '' %>" class="form-control">
      </div>
      <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-primary w-100">Lọc</button>
      </div>
    </form>

    <!-- Biểu đồ -->
    <div class="card mt-4">
      <div class="card-body">
        <canvas id="statChart" height="150"></canvas>
      </div>
    </div>
  </main>

  <script>
    const counts = <%- JSON.stringify(counts) %>;
    const labels = Object.keys(counts);
    const dataValues = Object.values(counts);

    const ctx = document.getElementById("statChart").getContext("2d");
    new Chart(ctx, {
      type: "line",
      data: {
        labels: labels,
        datasets: [{
          label: "Số lượng document",
          data: dataValues,
          fill: true,
          backgroundColor: "rgba(52, 152, 219, 0.3)",
          borderColor: "rgba(41, 128, 185, 1)",
          tension: 0.4
        }]
      },
      options: {
        responsive: true,
        plugins: {
          title: {
            display: true,
            text: "Thống kê số document trong từng collection"
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: { stepSize: 1 }
          }
        }
      }
    });
  </script>
</body>
</html>
